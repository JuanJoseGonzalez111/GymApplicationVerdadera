<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- ScrollView para hacer scroll si es necesario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="60dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Piernas"
                android:textSize="24sp" />

            <!-- Primera fila: Imagen a la izquierda y botón a la derecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="156dp"
                    android:layout_height="126dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/img_12" />

                <Button
                    android:id="@+id/Femoralesbutton"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Femorales "
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- Segunda fila: Imagen a la izquierda y botón a la derecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="156dp"
                    android:layout_height="126dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/img_14"
                    app:srcCompat="@drawable/img_13" />

                <Button
                    android:id="@+id/cuadricepsbutton"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="cuadriceps gym"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- Tercera fila: Imagen a la izquierda y botón a la derecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="156dp"
                    android:layout_height="126dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/img_2"
                    app:srcCompat="@drawable/img_14" />

                <Button
                    android:id="@+id/aductoresbuttom"
                    android:layout_width="170dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    android:text="Aductores"
                    android:textSize="18sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagepantorilla"
                    android:layout_width="156dp"
                    android:layout_height="126dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/img_15" />

                <Button
                    android:id="@+id/pantorrillabutton"
                    android:layout_width="170dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    android:text="Pantorrillas"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
